    alt: "McDonalds",
  },
  {
    src: "https://upload.wikimedia.org/wikipedia/en/thumb/8/84/Jollibee_2011_logo.svg/800px-Jollibee_2011_logo.svg.png",
    alt: "Jollibee",
  },
  {
    src: "https://lirp.cdn-website.com/b3fbd289/dms3rep/multi/opt/san-miguel-foods_logo-640w.png",
