---
import Grid3DImage from "@/components/Grid3DImage.astro";
import Header from "@/components/Header.astro";
import LinkButton from "@/components/LinkButton";
import { Button } from "@/components/ui/button";
import MainLayout from "@/layouts/MainLayout.astro";
import { Check, CheckCircle } from "lucide-react";
---

<MainLayout
  title="Products offered by Santienz Philippines Inc. | No.1 Polyurethane Mortar Flooring in the Philippines since 1998"
  desc="Discover our range of high-quality industrial flooring and waterproofing solutions designed for durability and performance."
>
  <Header showCTA className="text-primary-foreground" />
  <section
    id="main-hero"
    class="flex flex-col items-center justify-center h-fit pt-24 sm:pt-32 space-y-8 relative pb-16"
  >
    <div
      class="absolute inset-0 w-full h-full bg-blue-950 z-20 [mask-image:radial-gradient(transparent,white)] pointer-events-none"
    >
    </div>
    <Grid3DImage />
    <div
      class="flex flex-col items-center gap-4 flex-1 col-start-1 max-w-6xl px-4 z-20"
    >
      <h1
        class="font-bold text-center text-4xl sm:text-5xl md:text-6xl text-tertiary drop-shadow-lg leading-tight"
      >
        Products offered by Santinez Philippines Inc.
      </h1>
      <p class="text-primary-foreground text-center drop-shadow-lg">
        Discover our range of high-quality industrial flooring and waterproofing
        solutions designed for durability and performance.
      </p>
    </div>
  </section>
  <section id="polyurethane-flooring" class="space-y-8">
    <div class="mx-auto max-w-6xl space-y-4 px-4">
      <h2 class="text-center font-bold text-4xl text-primary">
        Polyurethane Flooring
      </h2>
      <p class="text-center text-muted-foreground">
        Our polyurethane mortar flooring systems are designed for heavy-duty
        industrial environments, offering exceptional resistance to chemicals,
        abrasion, and thermal shock. Ideal for food processing, pharmaceutical,
        and manufacturing facilities.
      </p>
      <div class="flex justify-center gap-4 flex-wrap">
        <div>
          <CheckCircle className="inline mr-1 text-tertiary" />
          <span class="text-muted-foreground">Durable</span>
        </div>
        <div>
          <CheckCircle className="inline mr-1 text-tertiary" />
          <span class="text-muted-foreground">Hygienic</span>
        </div>
        <div>
          <CheckCircle className="inline mr-1 text-tertiary" />
          <span class="text-muted-foreground">Easy Maintenance</span>
        </div>
      </div>
    </div>
    <div
      class="grid xmd:grid-cols-2 xmd:grid-rows-2 max-w-6xl w-full mx-auto xmd:px-4 gap-1"
    >
      <div class="bg-primary/10 w-full h-full aspect-[2/1] xmd:rounded-tl-xl">
      </div>
      <div class="bg-primary/10 w-full h-full aspect-[2/1] xmd:rounded-tr-xl">
      </div>
      <div class="bg-primary/10 w-full h-full aspect-[2/1] xmd:rounded-bl-xl">
      </div>
      <div class="bg-primary/10 w-full h-full aspect-[2/1] xmd:rounded-br-xl">
      </div>
    </div>
  </section>
  <section id="water-proofing" class="space-y-8">
    <div class="mx-auto max-w-6xl space-y-4 px-4">
      <h2 class="text-center font-bold text-4xl text-primary">
        Water Proofing
      </h2>
      <p class="text-center text-muted-foreground">
        We provide advanced waterproofing solutions to protect structures from
        water ingress and damage. Our systems are suitable for roofs, basements,
        and wet areas, ensuring long-lasting protection and peace of mind for
        both commercial and residential projects.
      </p>
      <div class="flex justify-center gap-4 flex-wrap">
        <div>
          <CheckCircle className="inline mr-1 text-tertiary" />
          <span class="text-muted-foreground">Water Resistant</span>
        </div>
        <div>
          <CheckCircle className="inline mr-1 text-tertiary" />
          <span class="text-muted-foreground">Long-lasting Protection</span>
        </div>
        <div>
          <CheckCircle className="inline mr-1 text-tertiary" />
          <span class="text-muted-foreground"
            >Suitable for Roofs & Basements</span
          >
        </div>
      </div>
    </div>
    <div
      class="grid xmd:grid-cols-2 xmd:grid-rows-2 max-w-6xl w-full mx-auto xmd:px-4 gap-1"
    >
      <div class="bg-primary/10 w-full h-full aspect-[2/1] xmd:rounded-tl-xl">
      </div>
      <div class="bg-primary/10 w-full h-full aspect-[2/1] xmd:rounded-tr-xl">
      </div>
      <div class="bg-primary/10 w-full h-full aspect-[2/1] xmd:rounded-bl-xl">
      </div>
      <div class="bg-primary/10 w-full h-full aspect-[2/1] xmd:rounded-br-xl">
      </div>
    </div>
  </section>
  <section id="nafufill-km-250" class="space-y-8">
    <div class="mx-auto max-w-6xl space-y-4 px-4">
      <h2 class="text-center font-bold text-4xl text-primary">
        Nafufill KM 250
      </h2>
      <p class="text-center text-muted-foreground">
        Nafufill KM 250 is a high-performance repair mortar for concrete
        structures. It offers excellent adhesion, high compressive strength, and
        resistance to environmental factors, making it ideal for structural
        repairs and surface restoration in demanding conditions.
      </p>
      <div class="flex justify-center gap-4 flex-wrap">
        <div>
          <CheckCircle className="inline mr-1 text-tertiary" />
          <span class="text-muted-foreground">High Compressive Strength</span>
        </div>
        <div>
          <CheckCircle className="inline mr-1 text-tertiary" />
          <span class="text-muted-foreground">Excellent Adhesion</span>
        </div>
        <div>
          <CheckCircle className="inline mr-1 text-tertiary" />
          <span class="text-muted-foreground"
            >Resistant to Environmental Factors</span
          >
        </div>
      </div>
    </div>
    <div
      class="grid xmd:grid-cols-2 xmd:grid-rows-2 max-w-6xl w-full mx-auto xmd:px-4 gap-1"
    >
      <div class="bg-primary/10 w-full h-full aspect-[2/1] xmd:rounded-tl-xl">
      </div>
      <div class="bg-primary/10 w-full h-full aspect-[2/1] xmd:rounded-tr-xl">
      </div>
      <div class="bg-primary/10 w-full h-full aspect-[2/1] xmd:rounded-bl-xl">
      </div>
      <div class="bg-primary/10 w-full h-full aspect-[2/1] xmd:rounded-br-xl">
      </div>
    </div>
  </section>
  <section>
    <div class="mx-auto max-w-6xl flex flex-col gap-4 px-4">
      <h3 class="text-center font-bold text-4xl text-primary">
        View Our Portfolio
      </h3>
      <p class="text-center text-muted-foreground">
        Explore our portfolio of completed projects to see how our polyurethane
        flooring, waterproofing, and repair solutions have delivered outstanding
        results for clients across various industries.
      </p>
      <LinkButton
        title="View Portfolio"
        href="/portfolio"
        className="mx-auto"
      />
    </div>
  </section>
  <script>
    window.addEventListener("scroll", () => {
      const heroHeight =
        (document.getElementById("main-hero")?.clientHeight as number) + 100;

      if (window.scrollY > heroHeight * 0.75) {
        document
          .getElementById("landing-page-header")
          ?.classList.add("active-header");
        document
          .getElementById("header-burger-icon")
          ?.classList.add("active-header-burger-icon");
        Array.from(document.getElementsByClassName("header-links")).forEach(
          (el) => {
            el.classList.add("active-header-links");
          },
        );
      } else {
        document
          .getElementById("landing-page-header")
          ?.classList.remove("active-header");
        document
          .getElementById("header-burger-icon")
          ?.classList.remove("active-header-burger-icon");
        Array.from(document.getElementsByClassName("header-links")).forEach(
          (el) => {
            el.classList.remove("active-header-links");
          },
        );
      }
    });
  </script>
</MainLayout>
