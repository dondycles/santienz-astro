---
import { cn } from "@/lib/utils";

interface Props {
  h: string;
  className?: string;
}
const { h, className } = Astro.props;
---

<h1
  class={cn(
    "font-bold text-4xl sm:text-5xl md:text-6xl text-tertiary relative z-20 leading-tight drop-shadow-lg text-center",
    className,
  )}
>
  {h}
</h1>
