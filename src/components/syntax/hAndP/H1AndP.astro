---
import H1 from "./H1.astro";

interface Props {
  h: string;
  p: string;
}
const { h, p } = Astro.props;
---

<div class="max-w-6xl px-4 space-y-4 mx-auto">
  <H1 h={h} />
  <p
    class="text-primary-foreground relative z-20 drop-shadow-lg text-center leading-tight"
  >
    {p}
  </p>
  <slot />
</div>
