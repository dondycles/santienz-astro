---
import { Copyright, Mail, MapPin, Phone, Pin } from "lucide-react";
import Logo from "../Logo.astro";
import { Image } from "astro:assets";
import sunRays from "@/images/sun-rays.webp";
---

<footer
  class="relative space-y-8 bg-primary/10 pt-6 md:pt-16 mt-auto mb-0 overflow-hidden"
>
  <div class="mx-auto grid max-w-6xl gap-x-4 gap-y-8 px-4 md:grid-cols-3 z-10">
    <div class="space-y-4">
      <p class="text-primary font-semibold">Santienz Philippines Inc.</p>
      <Logo style="w-24" />
    </div>
    <div class="space-y-4">
      <div class="space-y-4">
        <h4 class="font-semibold text-primary">Navigation</h4>
        <ul class="space-y-2 text-base text-muted-foreground">
          <li>
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/products">Products</a>
          </li>
          <li>
            <a href="/projects">Projects</a>
          </li>
          <li>
            <a href="/about-us">About Us</a>
          </li>
          <li>
            <a href="/careers">Careers</a>
          </li>
          <li>
            <a href="/testimonials">Brochure</a>
          </li>
          <li>
            <a href="/testimonials">Testimonials</a>
          </li>
        </ul>
      </div>
      <div class="space-y-4">
        <h4 class="font-semibold text-primary">Products</h4>
        <ul class="space-y-2 text-base text-muted-foreground">
          <li>
            <a href="/products/#polyurethane-flooring">Polyurethane Flooring</a>
          </li>
          <li>
            <a href="/products/#water-proofing">Water Proofing</a>
          </li>
          <li>
            <a href="/products/#nafufill-km-250">Nafufill KM 250</a>
          </li>
        </ul>
      </div>
    </div>

    <div class="space-y-4">
      <h4 class="font-semibold text-primary">Contact</h4>
      <ul class="space-y-4 text-base text-muted-foreground">
        <li class="space-y-2">
          <p class="text-foreground">Head Office</p>
          <div class="flex flex-col gap-2">
            <div class="flex gap-2">
              <MapPin className="size-5" />
              <span>352 San Agustin Ave., Palatiw, Pasig City</span>
            </div>
            <div class="flex gap-2">
              <Mail className="shrink-0 size-5" />
              <span class="break-all">santienztechnical@gmail.com</span>
            </div>
            <div class="flex gap-2">
              <Phone className="shrink-0 size-5" />
              <span>Technical Dept. : (02) 7001-0273</span>
            </div>
            <div class="flex gap-2">
              <Phone className="shrink-0 size-5" />
              <span>Admin Dept. : (02) 7728-3381</span>
            </div>
          </div>
        </li>
        <li class="space-y-2">
          <p class="text-foreground">Cebu Office</p>
          <div class="flex flex-col gap-2">
            <div class="flex gap-2">
              <MapPin className="shrink-0 size-5" />
              <span>Lot 4863 D2, Lower Linao, Talisay City, Cebu</span>
            </div>
            <div class="flex gap-2">
              <Mail className="shrink-0 size-5" />
              <span class="break-all">santienzacctg.visayas@gmail.com </span>
            </div>
          </div>
        </li>
        <li class="space-y-2">
          <p class="text-foreground">Davao Office</p>
          <div class="flex flex-col gap-2">
            <div class="flex gap-2">
              <MapPin className="shrink-0 size-5" />
              <span
                >Purok 7, Composano Compound, Brgy. Tugbok, Davao City
              </span>
            </div>
            <div class="flex gap-2">
              <Mail className="shrink-0 size-5" />
              <span class="break-all">santienzDavao@gmail.com</span>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>
  <div class="p-4 z-10">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3861.6519226290716!2d121.08610509999998!3d14.561886800000009!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3397c7d0d940b8ab%3A0x1914a2886e799f11!2sSantienz%20Philippines%20Incorporated!5e0!3m2!1sen!2sph!4v1750235424619!5m2!1sen!2sph"
      height="225"
      style={{ border: 0 }}
      allowfullscreen
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      title="Santienz Philippines Incorporated Location Map"
      class="w-full rounded-xl outline max-w-6xl mx-auto"></iframe>
  </div>
  <div
    class="absolute top-0 left-0 w-full h-full -z-10 pointer-events-none opacity-10"
  >
    <Image
      src={sunRays}
      alt="Santienz Logo Sun Rays"
      class="w-full h-full z-0 object-top-left object-cover saturate-25 brightness-125"
    />
  </div>
  <div class="bg-primary py-8 text-center text-muted-foreground text-sm z-10">
    <Copyright className="inline size-6" />
    <span> 2025 Santienz Philippines Inc.</span>
  </div>
</footer>
