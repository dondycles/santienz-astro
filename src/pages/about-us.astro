      pClassName="text-left indent-8"
    >
      <div class="mx-auto z-20 flex gap-1 flex-col sm:flex-row mt-12 max-w-48">
        <CTAButton
          link="/projects"
          className="xmd:block hidden"
          variant="tertiary"
          effect="shineHover"
        >
          See Our Projects
        </CTAButton>
      </div>
      <SectionMainHeroOverlay>
        <Image
          src={aboutUsBg}
